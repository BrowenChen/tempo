<!-- Temporary styling -->

<style>
	.home-wrapper {
		width: 350px;
		height: 400px;
		border: 1px solid green;
		margin: 0 auto;
		margin-top: 40px;
		text-align: center;
		/*padding: 20px;*/
	    border: 1px solid #dedede;
	    border-radius: 3px;
	    background-color: white;
	    box-shadow: .5px .5px .5px #888888;		
	    position: relative;
	}

	.home-wrapper header {
		position: absolute;
		top: 0;
		height: 15%;
		width: 100%;
		background-color: #2980B9;
	}

	.home-wrapper header h3{
		color: #fff;
		margin-bottom: 0;
	}

	.home-wrapper section {
		position: absolute;
		top: 20%;
		width: 100%;
		height: 60%;
	}

	.home-wrapper select {
		width: 100px;
	}

	.home-wrapper footer {
		position: absolute;
		top: 80%;
		width: 100%;
		height: 20%;		
		background-color: white;
	}

	.home-wrapper footer a {
		text-decoration: none;
		color: #2980B9;
		margin-bottom: 10px;
	}

	.home-wrapper footer a:hover {
		background-color: white;
		opacity: .6;
	}

	.home-wrapper h3 {
		color: #e74c3c;
	}

	.home-wrapper button {
	    width: 75px;
	    height: 75px;
	    display: block;
	    margin: 0 auto;
	    /*margin: 15px;*/
	    margin-top: 15px;
	    background-color: #66CC99;
	    border: 1px solid #2ABB9B;
	    border-radius: 35px;		
	}

	.home-wrapper button:hover {
		opacity: .8;
		cursor: pointer;
	}



</style>


<div class="home-wrapper">
	<header>
		<h3> Welcome Home <%= name %></h3>
	</header>
	<section> 
		<h4> Activity duration </h4>
		<select id='time-selector'>
		    <% _(times).each(function(time) { %> 
		        <option value='<%= time.duration %>'><%= time.duration %></option>
		    <% }); %>
		</select> 
		<button class='go-btn'>GO</button>
		<br>
	</section>
	<footer>
		<a href='tempo#interests'> Change interests </a>	
		<br>
		<br>
		<a href='tempo#settings'> See your settings</a>
	</footer>
</div>