<style>
	/*Activity module*/
  @media screen and (max-width: 675px) {
      .activity {
          width: 300px;
      }
  }

  .jumbotron {
    padding: 0;
    min-height: 500px;
    position: relative;
  }

  .activity {
    position: relative;
    top: 45px;
    margin: 0 auto;
    width: 650px;
    min-height: 500px;
    max-height: 600px;
    background-color: white;
    border: 1px solid #ddd;
    box-shadow: 1px 1px 1px #eee;
    border-top-left-radius: 5px;
  	border-top-right-radius: 5px;
  }

  .activity header {
    position: relative;
    top: 0;
    height: 12%;
    background-color: rgb(31, 137, 229);
    color: white;
  }

  .activity header h3 {
  	margin: 0;
    padding: 7px;
  	line-height: 23px;
  }

  /*TODO: Fix adjusting section container*/
  .activity section {
  	height: 90%;
    max-height: 375px;
  	overflow: hidden;
  	margin-bottom: 0;
    padding: 10px;

  }

  .activity section p {
  	overflow: scroll;
  	height: 100%;
    width: 100%;
  	font-family: 'Lato', sans-serif;
    font-weight: 300;
  	font-size: 100%;
  	margin: 10px;
    padding: 10px;
  }

  .activity section .thumbnail {
    height: 90%;
    width: 100%;
    max-height: 365px;
    overflow: scroll;
    position: relative;
  }

  .activity section .likeContainer {
  	margin: 10px;
  	margin-bottom: 0;
  }

  .activity footer {
  	background-color: #f5f5f5;
  	position: absolute;
  	height: 15%;
  	bottom: 0;
  	border: 1px solid #ddd;
  }

  .activity footer a {
  	position: relative;
  	top: 10px;
  	text-decoration: none;
  	color: #2980B9;
  }

  .activity footer a:hover {
  	background-color: #f5f5f5;
  	color: #2980B9;
  	opacity: .7;
  }

  #like-count {
    color: rgb(92, 184, 92);

  }

  #dislike-count {
    color: rgb(217, 83, 79);
  }

  .like-btn {
    background-color: rgb(92, 184, 92);
    border-color: rgb(92, 184, 92);    


  }

  .dislike-btn {
    background-color: rgb(217, 83, 79);
    border-color: rgb(217, 83, 79);
  }

  .likeContainer {

  }

  .likeContainer button:hover {
  	opacity: .8;
  	cursor: pointer;
  }

  .linkContainer {
    float: right;
    margin-top: -35px;
    padding-right: 10px;
  }

  a:hover {
  	background-color: transparent;
    font-size: 100%;
  }
</style>


<div class="jumbotron activity">
  <header>
      <h3 id="title"><%= title %></h3>
  </header>  

  <section>
    <div class="thumbnail">
      <!-- <img src="..." alt="..."> -->
      <div class="caption">
        <div id="content"><%= content %></div>
      </div>
    </div>
  </section>

  <footer>
      <span id="likes">Likes: <span id="like-count"><%= likes %></span></span>
      <span id="dislikes">Disikes: <span id="dislike-count"><%= dislikes %></span></span>
      <br>
      <button class='btn btn-primary like-btn' role="button">Like</button>
      <button class='btn btn-default dislike-btn' role="button">Dislike</button><br>  
      <div class="linkContainer">
        <a id="link" href='<%= link %>' target="_blank"> Link </a>
        <a href='<%= backLink %>' id='back'> Back </a>     
      </div>
  </footer>
</div>